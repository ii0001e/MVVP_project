<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsAndroid.Views.DBFriendPage">
    <StackLayout>
        <Label Text="Name" />
        <Entry Text="{Binding Name}" />
        <Label Text="Email" />
        <Entry Text="{Binding Email}" Keyboard="Email" />
        <Label Text="Phone number" />
        <Entry Text="{Binding Phone}" Keyboard="Telephone"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Save" Clicked="SaveFriend" />
            <Button Text="Delete" Clicked="DeleteFriend" />
            <Button Text="Cancel" Clicked="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>